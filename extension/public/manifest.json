{
  "manifest_version": 3,
  "name": "AI Extension",
  "description": "Summarizes articles with AI",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}